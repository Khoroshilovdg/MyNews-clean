---
// register.astro
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg border"> <!-- Tailwind classes set its maximum width, center it, add padding, shadows, and rounded corners -->
    <h1 class="text-3xl font-serif font-bold mb-6 text-center text-gray-900">Sign up on MyNews</h1>
    
    <form action="/api/register" method="POST" class="space-y-4"> <!-- specifies where form data will be sent (API route /api/register). data will be sent using the HTTP POST method -->
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email:</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required 
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500"
          placeholder="Enter your email"
        >
      </div>
      
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password:</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          required 
          minlength="6"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500"
          placeholder="6 characters min"
        >
      </div>
      
      <button 
        type="submit" 
        class="w-full py-2 px-4 bg-green-600 hover:bg-green-700 text-white font-medium rounded-md transition duration-200"
      >
        Sign Up
      </button>
    </form>
    
    <div class="mt-6 text-center">
      <p class="text-gray-600">
        Already have an account? 
        <a href="/signin" class="text-green-600 hover:text-green-700 font-medium">Log in</a>
      </p>
    </div>
    
    <div class="mt-4 text-center">
      <a href="/" class="text-gray-500 hover:text-gray-700 text-sm">‚Üê Back to Home page</a>
    </div>
  </div>
</BaseLayout>