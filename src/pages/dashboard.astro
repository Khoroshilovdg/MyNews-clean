---
// dashboard.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import { supabase } from "../lib/supabase";

// code gets access and refresh tokens from cookies to check if the user is logged in
const accessToken = Astro.cookies.get("sb-access-token");
const refreshToken = Astro.cookies.get("sb-refresh-token");
//If at least one of the tokens is missing, it means that the user is not authorized. In this case, Astro.redirect(‚Äú/signin‚Äù) immediately redirects the user to the login page (/signin)
if (!accessToken || !refreshToken) {
  return Astro.redirect("/signin");
}

// sets up Supabase session using tokens from cookies
await supabase.auth.setSession({
  access_token: accessToken.value,
  refresh_token: refreshToken.value,
});
//gets the user object. If the session is valid, user will contain the user data
const { data: { user }, error } = await supabase.auth.getUser();
//re-check. If an error occurs when receiving user data, the user is redirected back to the login page
if (error || !user) {
  return Astro.redirect("/signin");
}
